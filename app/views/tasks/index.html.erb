<% title "Index", true, true %>
<% content_for(:toolbar_title) do %>
  <%= toolbar_title({ :main => "task"}) %>
<% end %>


<div class="row">
	<div class="col s12">
		<div class="responsive-table">
			<table class="md-table striped highlight">
			  <thead class="thead-light">
			    <tr>
			      <th>Start time</th>
			      <th>End time</th>
			      <th>Sla type</th>
			      <th>Sla name</th>
			      <th>Task number</th>
			      <th>Duration</th>
			      <th>Stage</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @tasks.each do |task| %>
			      <tr>
			        <td><%= task.start_time %></td>
			        <td><%= task.end_time %></td>
			        <td><%= task.sla_type %></td>
			        <td><%= task.sla_name %></td>
			        <td><%= task.task_number %></td>
			        <td><%= task.duration %></td>
			        <td><%= task.stage %></td>
			        <td><%= link_to 'Show', task %></td>
			        <td><%= link_to 'Edit', edit_task_path(task) %></td>
			        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
		<div class="row">
			<%= paginate @tasks, :remote => true %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col s12">
		<%= link_to "New Task", new_task_path, :class => "md-secondary md-button" %>
		<%= link_to "Upload Tasks", import_tasks_path, :class => "md-secondary md-button" %>
	</div>
</div>
